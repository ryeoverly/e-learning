  <title>Math E-Learning</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      text-align: center;
      background: #f0f8ff;
      padding: 40px;
    }

    .container {
      background: #fff;
      padding: 30px;
      max-width: 400px;
      margin: auto;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      border-radius: 12px;
    }

    h1 {
      color: #333;
    }

    .problem {
      font-size: 24px;
      margin: 20px 0;
    }

    input[type="number"] {
      font-size: 18px;
      padding: 8px;
      width: 100px;
    }

    button {
      font-size: 16px;
      padding: 10px 20px;
      margin-top: 10px;
      background-color: #007BFF;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
    }

    button:hover {
      background-color: #0056b3;
    }

    .feedback {
      font-size: 18px;
      margin-top: 20px;
    }
  </style>
